	// 계정상태에 따른 초기 화면 세팅
	var setModeForAccountState = function() {
		if (isFirstRun){
			var vend_tp = userManager.getVEND_TP();
			if (vend_tp == "C"){
				setSelectPop();
				
				$("#btnPartSearch").on("click", setInitPartCompList);
