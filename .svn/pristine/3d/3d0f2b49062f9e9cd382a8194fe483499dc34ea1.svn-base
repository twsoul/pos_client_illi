								.replace(/\{\{ARRI_T\}\}/, rowData.ARRI_T)
								.replace(/\{\{DRIV_NM\}\}/, rowData.DRIV_NM)
								.replace(/\{\{DRIV_TEL\}\}/, window.Utils.getTelCenterLine(rowData.DRIV_TEL))
								.replace(/\{\{STAT\}\}/, rowData.STAT)
